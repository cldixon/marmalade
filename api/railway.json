{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["api/**", "marmalade/**"]
  },
  "deploy": {
    "startCommand": "cd api && uv run hypercorn main:app --bind \"[::]:$PORT\"",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
